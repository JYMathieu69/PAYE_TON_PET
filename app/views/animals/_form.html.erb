<%= simple_form_for(@animal) do |f| %>
  <div class="form-inputs">
    <%= f.input :species %>
    <%= f.input :name %>
    <%= f.input :race %>
    <%= f.input :gender %>
    <%= f.input :description %>
    <%= f.input :chip %>
    <%= f.input :worms %>
    <%= f.input :vaccined %>
    <%= f.input :accessories %>
    <%= f.input :daily_price %>
    <%= f.input :owner_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>