
<div class="content">
  <div class="images_signup">
      <%= image_tag "welcome.png", alt: "WELCOME", width: 200, class: 'welcome' %>
      <%= image_tag "image_signup.png", alt: "SIGNUP", width: 200, class: 'signup' %>
  </div>

  <h2> Tu veux vivre une exp√©rience <strong> UNIQUE üê∂ ?</strong></h2> 


  <form class="pure-form">

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :last_name,
                      required: true,
                      autofocus: true,
                      placeholder: "Your Last Name",
                      input_html: { autocomplete: "last_name" }%>
          <%= f.input :first_name,
                      required: true,
                      autofocus: true,
                      placeholder: "Your First Name",
                      input_html: { autocomplete: "first_name" }%>
          <%= f.input :address,
                      required: true,
                      autofocus: true,
                      placeholder: "Your Address",
                      input_html: { autocomplete: "address" }%>
          <%= f.input :telephone,
                      required: true,
                      autofocus: true,
                      placeholder: "Your Number Phone",
                      input_html: { autocomplete: "telephone" }%>
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      placeholder: "Your email",
                      input_html: { autocomplete: "email" }%>
          <%= f.input :password,
                      required: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      placeholder: "Your Password",
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation,
                      required: true,
                      placeholder: "Your Confirmation",
                      input_html: { autocomplete: "new-password" } %>
        </div>
            <div class="form-actions">
              <%= f.button :submit, "Sign up", class: 'button' %>
              <div>
                <%= render "devise/shared/links", class: 'signin-link' %>
              </div>
            </div>
      <% end %>
    </div>
  </form>
</div>


